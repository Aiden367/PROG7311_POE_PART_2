@using PROG7311_POE_PART_2.ViewModel;

@{
    Layout = "~/Views/Shared/_Layout_NewNavBar.cshtml";
}
@model AddFarmerAccountsViewModel;
<head>
    <link href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"> </script>
    <link rel="stylesheet" type="text/css" href="~/css/DisplayFarmersStyleSheet.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .color-block-display-farmer-products,
        .color-block-display-add-farmer-users {
            margin-top: 50px;
            margin-bottom: 200px;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 5px 5px 8px 8px rgba(0, 0, 0, 0.3);
        }

        .farmerNameComboBox {
            width: 100%;
            margin-bottom: 10px;
            padding: 5px;
            border-radius: 20px;
        }
    </style>
</head>

<body style="background-color:white">
    <div class="container">
        <h1>Add Farmers</h1>
        <form id="saveUserRoleForm" asp-controller="AddingFarmerAccounts" asp-action="AssignRole" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="color-block-display-add-farmer-users">
                        <select class="farmerNameComboBox" name="selectedUserRole" asp-for="selectedUserRole" id="userRoleComboBox" asp-items="new SelectList(Model.userRoleList)">
                            <option value="">-- Select Role --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="color-block-display-add-farmer-users">
                        <select class="farmerNameComboBox" name="selectedUsername" asp-for="selectedUsername" id="usernameComboBox" asp-items="new SelectList(Model.usernameList)">
                            <option value="">-- Select Username --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="color-block-display-add-farmer-users">
                        <button type="submit" class="btn btn-primary">Assign Role</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>